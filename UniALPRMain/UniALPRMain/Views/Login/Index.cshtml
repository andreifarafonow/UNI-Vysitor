@{
    Layout = null;
}
<html lang="ru">
   <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <title>Вход</title>
      <link rel="stylesheet" href="/login_styles.css">
      <link rel="stylesheet" href="/plugins/fontawesome-free-5.0.1/css/fontawesome-all.css">
      <style>body{font-size:16px;}</style>
      <style>
         body{
             background-color: #f3f3f3!important; 
         }

         .btn{
             background-color: #36b95e!important; 
             border: none!important;
             transition: background-color 200ms ease;
             cursor: pointer!important;
         }

         .btn:hover {
                background-color: #32aa56!important;
            }
            .login-card-body{
                border-radius: 12px!important;
            }
      </style>
   </head>
   <body class="login-page" style="min-height: 310.781px;">
      <div class="login-box">
         <div class="login-logo">
            <img src="/images/logo.png" style="width: 8vw;" />
         </div>
         <!-- /.login-logo -->
         <div class="card">
            <div class="card-body login-card-body">
               <p class="login-box-msg">Войдите для перехода в АРМ</p>
               <form action="/login" method="post">
                  <div class="input-group mb-3">
                     <input type="text" class="form-control" placeholder="Логин" name="login">
                     <div class="input-group-append">
                        <div class="input-group-text">
                           <span class="fas fa-user"></span>
                        </div>
                     </div>
                  </div>
                  <div class="input-group mb-3">
                     <input type="password" class="form-control" placeholder="Пароль" name="password">
                     <div class="input-group-append">
                        <div class="input-group-text">
                           <span class="fas fa-lock"></span>
                        </div>
                     </div>
                  </div>
                  <div class="row">
                     <div class="col-8">
                     </div>
                     <!-- /.col -->
                     <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Войти</button>
                     </div>
                     <!-- /.col -->
                  </div>
               </form>
            </div>
            <!-- /.login-card-body -->
         </div>
      </div>
      <!-- /.login-box -->
      <!-- jQuery -->
      <!-- Bootstrap 4 -->
      <!-- AdminLTE App -->
      <!-- Visual Studio Browser Link -->
      <!-- End Browser Link -->
      <live-preview-root></live-preview-root>
   </body>
</html>